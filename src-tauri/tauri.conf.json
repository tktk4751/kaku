{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kaku",
  "version": "0.1.0",
  "identifier": "app.kaku.memo",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "kaku",
        "width": 400,
        "height": 500,
        "visible": false,
        "decorations": false,
        "resizable": true,
        "maximizable": true,
        "skipTaskbar": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
