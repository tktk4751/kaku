{
  "name": "kaku",
  "version": "0.1.0",
  "description": "A fast, local-first markdown memo app",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "bun run tokens && vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "tauri": "tauri",
    "tauri:dev": "GDK_BACKEND=x11 WEBKIT_DISABLE_DMABUF_RENDERER=1 tauri dev",
    "tokens": "style-dictionary build --config style-dictionary.config.js",
    "tokens:watch": "style-dictionary build --config style-dictionary.config.js --watch"
  },
  "license": "MIT",
  "dependencies": {
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.12.1",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/search": "^6.6.0",
    "@codemirror/state": "^6.5.3",
    "@codemirror/view": "^6.39.9",
    "@lezer/highlight": "^1.2.3",
    "@lezer/markdown": "^1.6.3",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.5.0",
    "@tauri-apps/plugin-opener": "^2",
    "open-props": "^1.7.17"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tauri-apps/cli": "^2",
    "style-dictionary": "^5.2.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
